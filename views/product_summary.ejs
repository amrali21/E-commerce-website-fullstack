	<h3>  SHOPPING CART [ <small>3 Item(s) </small>]<a  onclick="window.location.href='http://localhost:3000/home';" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>	
	<hr class="soft"/>
	
			
	<table class="table table-bordered">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Description</th>
                  <th>Quantity/Update</th>
				  <th>Price</th>
                  <th>Discount</th>
                  <th>Tax</th>
                  <th>Total</th>
				</tr>
              </thead>
              <tbody>
			<% var total_price = 0 %>
		    <%  if(results) { %>
			<%	for(var i = 0; i < results.length; i++){ %>
                <tr>
                  <td> <img width="60" style="max-height: 60px;" src="<%= results[i].image %>" alt=""/></td>
                  <td> <%= results[i].product_name %><br/>Color : black, Material : metal</td>
				  <td>
					<div class="input-append"><input value= "<%= results[i].amount %>" class="span1" style="max-width:34px" placeholder="1" id="appendedInputButtons" size="16" type="text"><button class="btn" type="button"><i class="icon-minus"></i></button><button class="btn" type="button"><i class="icon-plus"></i></button><button class="btn btn-danger" type="button"><i class="icon-remove icon-white"></i></button>				</div>
				  </td>
                  <td><%= results[i].retail_price %></td>
                  <td>N/A</td>
                  <td>N/A</td>
                  <td><%= results[i].total_price %></td>
				</tr>
				<% total_price += results[i].total_price %>
			<%	} %>
			<% } %>	
                <tr>
                  <td colspan="6" style="text-align:right">Total Price:	</td>
                  <td> <%= total_price %></td>
                </tr>
				 <tr>
                  <td colspan="6" style="text-align:right">Total Discount:	</td>
                  <td> $10.00</td>
                </tr>
                 <tr>
                  <td colspan="6" style="text-align:right">Total Tax:	</td>
                  <td> $50.00</td>
                </tr>
				 <tr>
                  <td colspan="6" style="text-align:right"><strong>TOTAL (<%= total_price %> - $10 + $50) =</strong></td>
                  <td class="label label-important" style="display:block"> <strong> <%= total_price - 10 + 50 %> </strong></td>
                </tr>
				</tbody>
            </table>
		
		
          
			
	<a onclick="window.location.href='http://localhost:3000/home';" class="btn btn-large"><i class="icon-arrow-left"></i> Continue Shopping </a>
	<a onclick="window.location.href='../checkout';" target="_blank" class="btn btn-large pull-right" >Next <i class="icon-arrow-right"></i></a>
	
